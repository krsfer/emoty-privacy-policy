# Server Configuration
PORT=8000
NODE_ENV=development

# Database Configuration (OPTIONAL - leave blank to run without database)
# For PostgreSQL (only if you need database storage)
# DATABASE_URL=postgresql://user:password@localhost:5432/emoty_beta
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=emoty_beta
# DB_USER=emoty_user
# DB_PASSWORD=your_password

# For Airtable (only if you need external storage)
# AIRTABLE_API_KEY=your_airtable_api_key
# AIRTABLE_BASE_ID=your_airtable_base_id

# Email Service (Mailgun) - For sending confirmation emails to users
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=mg.yourdomain.com
MAILGUN_FROM_EMAIL=noreply@yourdomain.com

# Notification Service (Nodemailer) - For sending form submissions to your email
ENABLE_NOTIFICATIONS=true
NOTIFICATION_EMAIL=your-email@example.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Common SMTP Settings:
# Gmail:
#   SMTP_HOST=smtp.gmail.com
#   SMTP_PORT=587
#   SMTP_SECURE=false
#   Note: Use App Password, not regular password
#
# Outlook/Hotmail:
#   SMTP_HOST=smtp-mail.outlook.com
#   SMTP_PORT=587
#   SMTP_SECURE=false
#
# Yahoo:
#   SMTP_HOST=smtp.mail.yahoo.com
#   SMTP_PORT=587
#   SMTP_SECURE=false
#
# Custom SMTP:
#   SMTP_HOST=mail.yourdomain.com
#   SMTP_PORT=465
#   SMTP_SECURE=true

# Security
JWT_SECRET=your_very_secure_random_string_here
CONFIRMATION_TOKEN_SECRET=another_secure_random_string
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=100

# Features
ENABLE_EMAIL_SENDING=true
ENABLE_RATE_LIMITING=true
ENABLE_LOGGING=true
LOG_LEVEL=info

# URLs
FRONTEND_URL=https://emoty.fr
UNSUBSCRIBE_URL=https://emoty.fr/unsubscribe
CONFIRMATION_URL=https://emoty.fr/api/confirm-signup