{% extends 'base.html.j2' %}

{% block header_nav %}
<div class="home-button">
    <a href="{{ home_url }}">{{ _('nav.home') }}</a>
</div>
<div class="lang-switch">
    <a href="{{ alternate_path }}">{{ _('nav.lang_switch') }}</a>
</div>
{% endblock %}

