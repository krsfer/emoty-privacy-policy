# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/emoty_beta
DB_HOST=localhost
DB_PORT=5432
DB_NAME=emoty_beta
DB_USER=emoty_user
DB_PASSWORD=your_secure_password

# Server Configuration
PORT=8000
NODE_ENV=development
API_BASE_URL=https://emoty.fr/api

# Email Configuration (Choose one)
# SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=beta@emoty.fr
SENDGRID_FROM_NAME=Emoty Beta Program

# Or AWS SES
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
SES_FROM_EMAIL=beta@emoty.fr
SES_FROM_NAME=Emoty Beta Program

# Or SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Security
JWT_SECRET=your_very_secure_random_string_here
CONFIRMATION_TOKEN_SECRET=another_secure_random_string
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=100

# Features
ENABLE_EMAIL_SENDING=true
ENABLE_RATE_LIMITING=true
ENABLE_LOGGING=true
LOG_LEVEL=info

# URLs
FRONTEND_URL=https://emoty.fr
UNSUBSCRIBE_URL=https://emoty.fr/unsubscribe
CONFIRMATION_URL=https://emoty.fr/api/confirm-signup